resource "aws_security_group" "terraform" {
  name   = "Erlaube SSH von allen IPs"
  vpc_id = aws_vpc.terraform.id
  ingress {
    from_port   = 22
    to_port     = 22
    protocol    = "tcp"
    cidr_blocks = ["0.0.0.0/0"]
  }
  egress {
    from_port   = 0
    to_port     = 0
    protocol    = "all"
    cidr_blocks = ["0.0.0.0/0"]
  }
}
